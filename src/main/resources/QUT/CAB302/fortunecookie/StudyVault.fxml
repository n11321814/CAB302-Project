<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="QUT.CAB302.fortunecookie.StudyVaultController"
      style="-fx-background-color: #FFF9F2;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <spacing>10</spacing>

    <HBox alignment="CENTER_LEFT">
        <Label fx:id="backToHome" text="← Back to Home" style="-fx-text-fill: #2a9df4; -fx-cursor: hand;"
               onMouseClicked="#goToHomepage"/>
    </HBox>

    <Label text="Your Study Vault" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Saved Quotes" style="-fx-font-size: 14px;"/>

    <ListView fx:id="quotesListView" style="-fx-font-size: 16px;">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </ListView>
</VBox>

